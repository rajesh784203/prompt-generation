FROM python:3.11-slim

RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY prompt_gen/ ./prompt_gen/
COPY prompt_gen/requirements.txt ./

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 8000

CMD ["uvicorn", "prompt_gen.app:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

